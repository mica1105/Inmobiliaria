<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-light navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container d-flex flex-column flex-md-row justify-content-between">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="my-0" width="200" src="~/img/logo2.png"></a>
                    <a class="btn btn-outline-primary py-2 d-none d-md-inline-block float-right font-weight-bold" href="@Url.Link("login", null)"><i class="lnr lnr-enter"></i>Acceder</a>
                }
                else
                {
                    <div class="dropdown">
                        <a class="btn btn-outline-info dropdown-toggle font-weight-bold" href="#" role="button" id="homeMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent" data-display="static">
                            <img class="my-0" width="180" src="~/img/logo2.png">
                        </a>
                        <div class="dropdown-menu bg-info" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="lnr lnr-home"></i> Inicio</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Privacy"><i class="lnr lnr-layers"></i> Claims</a>
                        </div>
                    </div>
                    @if (User.IsInRole("Administrador"))
                    {
                     <a class="py-2 d-none d-md-inline-block text-black-50 font-weight-bold" asp-area="" asp-controller="Usuario" asp-action="Index"><i class="lnr lnr-users"></i> Usuarios</a>
                    }
                    <a class="py-2 d-none d-md-inline-block text-black-50 font-weight-bold" asp-area="" asp-controller="Propietario" asp-action="Index"><span class="lnr lnr-mustache"></span> Propietarios</a>
                    <a class="py-2 d-none d-md-inline-block text-black-50 font-weight-bold" asp-area="" asp-controller="Inquilino" asp-action="Index"><span class="lnr lnr-smile"></span> Inquilinos</a>
                    <a class="py-2 d-none d-md-inline-block text-black-50 font-weight-bold" asp-area="" asp-controller="Inmueble" asp-action="Index"><span class="lnr lnr-apartment"></span> Inmuebles</a>
                    <a class="py-2 d-none d-md-inline-block text-black-50 font-weight-bold" asp-area="" asp-controller="Contrato" asp-action="Index"><span class="lnr lnr-license"></span> Alquileres</a>
                    <div class="dropdown">
                        <a class="btn btn-outline-primary dropdown-toggle font-weight-bold" href="#" role="button" id="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent" data-display="static">
                            <i class="lnr lnr-user"></i> @User.Identity.Name
                        </a>
                        <div class="dropdown-menu bg-info" aria-labelledby="dropdownMenuLink">
                            @if (!User.IsInRole("Administrador"))
                            {
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil"><i class="lnr lnr-user"></i> Perfil</a>
                            }
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="Logout"><i class="lnr lnr-exit"></i> Salir</a>
                            </div>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Inmobiliaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
