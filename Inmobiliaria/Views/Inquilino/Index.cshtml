@model IEnumerable<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand" asp-action="Index">Inquilinos</a>
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
            <a class="btn btn-outline-primary" asp-action="Create">Registrar</a>
        </li>
    </ul>
    <form asp-action="Buscar" method="get" class="form-inline">
        <input class="form-control mr-sm-2" name="q" type="search" placeholder="Nombre" aria-label="Search">
        <input type="submit" value="Buscar" class="btn btn-outline-success my-2 my-sm-0">
    </form>
</nav>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><i class="far fa-edit"></i></a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Detalles"><i class="fas fa-info"></i></a>
            @if (User.IsInRole("Administrador")) {
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><i class="far fa-trash-alt"></i></a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
