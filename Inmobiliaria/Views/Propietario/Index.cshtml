@model IEnumerable<Inmobiliaria.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand">Propietarios</a>
    <form asp-action="Buscar" method="get" class="form-inline">
        <input class="form-control mr-sm-2" name="q" type="search" placeholder="Nombre" aria-label="Search">
        <input type="submit" value="Buscar" class="btn btn-outline-success my-2 my-sm-0" >
    </form>
</nav>
<p>
    <a class="btn btn-primary" asp-action="Create">Registrar</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><i class="far fa-edit"></i></a>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><i class="far fa-trash-alt"></i></a>
                    }
                    <a class="btn btn-outline-secondary" asp-controller="Inmueble" asp-action="InmueblesPorPropietario" asp-route-id="@item.Id" title="Inmuebles"><i class="fas fa-building"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
